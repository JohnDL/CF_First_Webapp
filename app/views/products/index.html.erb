<p id="notice"><%= notice %></p>

<div class="header" id="productheader">
  <h1> Featured Products </h1>
</div> <!-- end header -->

<div class="container" id="shoppage">
  <div class='row'>
    <% @products.each do |product| %>
    <div class="col-xs-12 col-sm-4">
    <%= image_tag(product.image_url, :size => "220x220", class: "img-responsive") %>
      <h2><%= product.name %></h2>
      <p><strong>Description:</strong> <%= product.description %></p>
      <p><strong>Colors available:</strong> <%= product.color %></p>
      <p><strong>Price in Euro:</strong> <%= product.price %></p>
      <p><%= link_to 'Show', product %></p>
      <p><%= link_to 'Edit', edit_product_path(product) %></p>
      <p><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></p>
      </div> <!-- end col-xs-12 col-sm-4 -->
      <% end %>
      </div>
      </div>

</div> <!-- end shoppage container -->
<br>
<%= link_to 'New Product', new_product_path %>


