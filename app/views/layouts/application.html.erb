<!DOCTYPE html>
<html>
  <head>
    <title>MyFirstApp</title>
    <%= csrf_meta_tags %>

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>

    <link href="https://fonts.googleapis.com/css?family=Lato|Roboto" rel="stylesheet">

    <meta name="viewport" content="width=device-width, initial-scale=1"> <!-- For mobile phone responsive reactions -->
    <%= csrf_meta_tags %>

  </head>

  <!-- <body data-spy="scroll" data-target=".navbar"> --> <!-- scrollspy plugin -->
  <Body>
  <!-- NAV Bar begins here -->
<!-- <div class="container-fluid" id="navbar"> -->  <!-- Fixed navbar -->
<nav class="navbar navbar-inverse navbar-fixed-top">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <!-- <a class="navbar-brand" href="/static_pages/index#index">Active Gear Garmisch</a> -->
          <a class="navbar-brand"<%= link_to 'Active Gear Garmisch', static_pages_index_path %></a>
        </div>
        <div id="navbar" class="navbar-collapse collapse" aria-expanded="false">
          <!--<ul class="nav navbar-nav">-->
            
          <!--</ul>-->
          <ul class="nav navbar-nav navbar-right">
            <li class=“active”><%= link_to 'Home', root_path %></li>
            <li class="active"><%= link_to 'Shop', products_path %></li>
            <li class="active"><%= link_to 'About', static_pages_about_path %></li>
            <li class="active"><%= link_to 'Contact', static_pages_contact_path %></li>
            <li class="nav-search">
              <%= form_tag("/products", method: "get", class: "form-inline") do %>
              <%= text_field_tag(:q, nil, class: "form-control", placeholder: "Enter search keyword") %>
              <%= submit_tag("SEARCH", class: 'minibutton-search') %>
              <% end %>
            </li>
            <li>
              <% if user_signed_in? %>
              <%= link_to('Logout', destroy_user_session_path, :method => :delete)%>
              <% else %>
              <%= link_to('Login', new_user_session_path) %>
              <% end %>
            </li> 
          </ul>

        </div><!-- /.nav-collapse -->
      </div>
    </nav>
    </div> <!-- end container navbar -->

<% if notice %>
        <p id="notice" class="alert alert-success centre-text"><%= notice %></p>
    <% end %>
    <% if alert %>
        <p id="alert" class="alert alert-warning centre-text"><%= alert %></p>
<% end %>

    <%= yield %>

  </body>

  <footer class="navbar-default navbar-fixed-bottom" id="footer">
     <div class="container-fluid">
 <!--  <footer class="footer">
      <div class="container"> -->
        <span class="text-muted">&copy; 2017 Active Gear Garmisch</span>
      </div>
    </footer>


 <!--  <footer>
  	&copy; 2016 Active Gear Garmisch
	</footer> -->

</html>
